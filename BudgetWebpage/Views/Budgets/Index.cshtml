@model IEnumerable<BudgetWebpage.Models.Budget>

@{
    ViewBag.Title = "Budgets";
}

<h2>Your Budgets</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Budget_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget_Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget_Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Month_Interval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start_Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Budget_Name)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.Budget_Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Budget_Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Month_Interval)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start_Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Budget_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Budget_ID })
        </td>
    </tr>
}

</table>
